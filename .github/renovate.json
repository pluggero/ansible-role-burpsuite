{
  "extends": ["config:best-practices", ":disableRateLimiting"],
  "enabledManagers": ["github-actions", "pip_requirements", "custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$"],
      "matchStrings": ["burpsuite_version:\\s+\"(?<currentValue>[\\d\\.]+)\""],
      "datasourceTemplate": "custom.burpsuite",
      "depNameTemplate": "burpsuite",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$"],
      "matchStrings": [
        "burpsuite_extension_runtime_jython_version:\\s+\"(?<currentValue>[\\d\\.]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "jython/jython",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$"],
      "matchStrings": [
        "burpsuite_extension_runtime_jruby_version:\\s+\"(?<currentValue>[\\d\\.]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "jruby/jruby",
      "versioningTemplate": "ruby"
    }
  ],
  "customDatasources": {
    "burpsuite": {
      "defaultRegistryUrlTemplate": "https://portswigger.net/burp/releases/data?lastId=-1&pageSize=5",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $distinct($map(ResultSet.Results[releaseChannels[$contains(@, 'Stable')]]\
          .builds[ProductEdition='Burp Suite Community Edition'], function($v) { {\"version\": $v.Version} })) }"
      ]
    }
  },
  "packageRules": [
    {
      "matchPackageNames": ["burpsuite"],
      "groupName": "Update Burpsuite Stable version"
    },
    {
      "matchPackageNames": ["jython/jython"],
      "groupName": "Update Jython version"
    },
    {
      "matchPackageNames": ["jruby/jruby"],
      "groupName": "Update JRuby version"
    }
  ]
}
